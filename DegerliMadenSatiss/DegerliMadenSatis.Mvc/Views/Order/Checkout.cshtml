@model OrderViewModel

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6 class="coupon__link"><span class="icon_tag_alt"></span> ÖDEME SAYFASI  </h6>
            </div>
        </div>
        <form action="#" class="checkout__form">
            <div class="row">
                <div class="col-lg-8">
                    <h5>Fatura Bilgileri</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Adınız: <span>*</span></p>
                                <input asp-for="FirstName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Soyadınız: <span>*</span></p>
                                <input asp-for="LastName">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Adres: <span>*</span></p>
                                <input asp-for="Address">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Şehir: <span>*</span></p>
                                <input asp-for="City">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email: <span>*</span></p>
                                <input asp-for="Email">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Telefon Numarası: <span>*</span></p>
                                <input asp-for="PhoneNumber">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Not: <span>*</span></p>
                                <input asp-for="Note">
                            </div>
                        </div>                        
                    </div>                    
                    
                    
                    <h5>Ödeme Bilgileri</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Kart Üzerindeki Ad Soyad: <span>*</span></p>
                                <input asp-for="CardName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Kart Numarası <span>*</span></p>
                                <input asp-for="CardNumber">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Kart Geçerlilik Tarihi Ay <span>*</span></p>
                                <input asp-for="ExpirationMonth">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Kart Geçerlilik Tarihi Yıl <span>*</span></p>
                                <input asp-for="ExpirationYear">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Cvc <span>*</span></p>
                                <input asp-for="Cvc">
                            </div>
                        </div>
                    </div>
                </div>
                
                
                
                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Sipariş Özeti</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Ürünler</span>
                                    <span class="top__text__right">Toplam Tutar</span>
                                </li>
                                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                                {
                                    <li>@item.ProductName (@item.Quantity Adet) <span>@($"{(item.ProductPrice * item.Quantity):C0}")</span></li> 
                                }
                                                               
                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Toplam Tutar <span>@($"{Model.ShoppingCart.TotalPrice():C0}")</span></li>
                            </ul>
                        </div>
                        <div class="checkout__order__widget">                            
                            <label for="check-payment">
                                3D Secure
                                <input type="checkbox" id="check-payment">
                                <span class="checkmark"></span>
                            </label>
                            <label for="paypal">
                                SSL
                                <input type="checkbox" id="paypal">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <button type="submit" class="site-btn">ÖDEMEYİ TAMAMLA</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->
