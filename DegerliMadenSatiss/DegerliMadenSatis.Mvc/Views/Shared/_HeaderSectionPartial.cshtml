 <!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="alert alert-danger" role="alert">
                PROJE DENEME AMAÇLI YAPILMIŞTIR, MEVCUT ÜRÜNLERLE VE KURUMLARLA BAĞ BULUNMAMAKTADIR. ÜRÜN VE KURUM GÖRSELLERİ VE FİYAT BİLGİSİ TEMSİLİDİR. HİÇBİR ŞEKİLDE ÜRÜN SATIŞI YAPILMAMAKTADIR.
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                   <a href="/"><img src="/UI/img/logo_200x200l.png" alt="" style="width:180px"></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7 mt-5">

                <nav class="header__menu">
                    <ul>
                        <li class="active">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li>
                            <a href="https://localhost:59079/Product/Index/1" target="_blank">Külçe Altın</a>
                        </li>
                        <li>
                            <a href="https://localhost:59079/Product/Index/3" target="_blank">Ziynet Altın</a>
                        </li>
                        <li>
                            <a href="https://localhost:59079/Product/Index/4" target="_blank">Külçe Gümüş</a>
                        </li>
                        <li>  
                            <a asp-area="" asp-controller="Contact" asp-action="Checkabout" >İletişim</a>                            
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">
                        @if (!User.Identity.IsAuthenticated) @*Login olunmuşsa olmamışsa aşağıdakileri göster.*@
                        {

                            <a asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            <a asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                        }
                        else
                        {
                            if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                            {
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Panel</a>
                            }
                            <a asp-area="" asp-controller="Account" asp-action="Profile">Hesabım</a>
                            <a asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                        }

                    </div>

                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                           @* <li>
                                <a href="#">
                                    <span class="icon_heart_alt"></span>
                                    <div class="tip">2</div>
                                </a>
                            </li>*@
                            @await Component.InvokeAsync("ShoppingCartNotification",User.Identity.Name ?? null)
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->