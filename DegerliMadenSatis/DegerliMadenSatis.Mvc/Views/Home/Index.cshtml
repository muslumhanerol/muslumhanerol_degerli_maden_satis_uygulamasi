@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="~/images/@p.ImageUrl" class="card-img-top" alt="..."> @*Resimleri,başlıkları, özellikleri tektek yazmamak adına ProductConfig de hazırladığımız kodları içeri attık.*@
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@p.Properties</p>
                        <p class="card-text">@p.Price</p>
                        <a 
                            asp-area=""
                            asp-controller="Home"
                            asp-action="GetById"
                            asp-route-id="@p.Id"
                            class="btn btn-primary">Detay</a>
                            @*asp-action="GetById" HomeController daki  GetById*@
                            @*asp-route-id="@p.Id" = Site adreslemesinde Id kullandık istersek Name de verilebiliriz.*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>


   