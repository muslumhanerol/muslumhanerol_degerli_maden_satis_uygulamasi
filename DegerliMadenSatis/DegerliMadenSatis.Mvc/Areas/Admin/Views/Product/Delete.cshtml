@model ProductViewModel
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Properties</p>
                <p class="card-text">
                    <small class="text-body-secondary">
                        @Model.Price
                    </small>
                </p>
            </div>
            <div class="me-3 float-end">
                <a asp-area"Admin" asp-controller"Product" asp-action="Delete" class="float-end btn btn-danger">Sil</a>
            </div>
        </div>       
    </div>
</div>