@model List<ProductViewModel>

@section Styles{ @*_Layout.cshtml deki sıralama yapmak için section yapıldı, burada uygulanıyor.*@
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
}




<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-6 text-primary">Ürünler</h1>
        </div>
        <div class=" col-md-6">
            <button class="btn btn-success float-end">Ürün Ekle</button>
        </div>
    </div>
    <table id=entityTable class="table">
        <tr>
            <th>Resim</th>
            <th>Id</th>
            <th>Ürün</th>
            <th>Fiyat</th>
            <th>#</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td >
                    <img src="~/images/@p.ImageUrl" width="140" height="140" />
                </td>
                <td>
                    @p.Id
                </td>
                <td>
                    @p.Name
                </td>
                <td>
                    @p.Price
                </td>
                <td width="121">
                   <a asp-area="Admin" 
                   asp-controller="Product" 
                   asp-action="Edit"
                   asp-route-id="@p.Id"
                   class="btn btn-warning btn-sm">Düzenle</a>
                    
                   <a asp-area="Admin"
                   asp-controller="Product"
                   asp-action="Delete"
                   asp-route-id="@p.Id"
                   class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </table>

</div>